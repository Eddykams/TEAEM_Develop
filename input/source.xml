<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<configuration>
    <goals name="GoalA" type="OR" >  
            <goal name="GoalB" />
            <goal name="GoalC" /> 
    </goals>

    <mapping>   
            <goal name="GoalA" mappedFeature="FeatureA"></goal>
            <goal name="GoalB" mappedFeature="FeatureB"></goal>
            <goal name="GoalC" mappedFeature="FeatureC"></goal>
    </mapping>

<featureModel>
	<struct>
		<alt mandatory="true" name="FeatureA">
			<feature name="FeatureB"/>
			<feature name="FeatureC"/>
		</alt>
	</struct>
        <constraints>
		<rule>
			<description>We Link goalB and FeatureB.</description>
			<imp>
				<var>GoalB</var>
				<var>FeatureB</var>
			</imp>
		</rule>
		<rule>
			<imp>
				<var>GoalC</var>
				<var>FeatureC</var>
			</imp>
		</rule>
	</constraints>
</featureModel>
</configuration>
